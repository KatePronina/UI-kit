mixin main-wrapper
  .main-wrapper
    .main-wrapper__header
      +header
    +main-info({ 
      title: 'Школа танцев "MOVEMENT"',
      description: 'Научим танцевать уже после первого урока! Опытнейшие педагоги ждут Вас на занятиях!'
     }) 
    .main-wrapper__section-container
      +section({ title: 'Что такое "MOVEMENT" в процентах?' })
      +features({ featuresData: [
          {
            label: 'довольных учеников',
            percent: 98,
          },
          {
            label: 'преподавателей из стран Латинской Америки',
            percent: 34,
          },
          {
            label: 'полностью оборудованные залы',
            percent: 100,
          },
          {
            label: 'учеников остаются с нами после первого занятия',
            percent: 83,
          },
        ]
      })
      +section({ title: 'Посмотрите, в каком прекрасном городе мы работаем' })
        +video({ url: 'winter.mp4', title: 'Санкт-Петербург', author: 'by Time Lab' })
      +section({ title: 'Возможно, Вы в одном клике от мечты...' })
