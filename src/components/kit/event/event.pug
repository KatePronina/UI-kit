include ~src/components/kit/button/button.pug

mixin event({ day, month, title, img, text })
  article.event
    -
      const image = `images/${img}`;
    .event__image(style=`background-image: url(${image})`)
    .event__content
      span.event__date
        span.event__day= day
        = ` ${month}`
      span.event__title= title
      p.event__description= text
      .event__button
        +button({ text: 'ADD  TO  CALENDAR' })