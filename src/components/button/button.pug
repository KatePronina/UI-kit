mixin button(name, color, size, ripple)
    button.main-btn(class= color === "orange" ? "main-btn--orange" : "",
                    class= color === "green" ? "main-btn--green" : "",
                    class= size === "big" ? "main-btn--big" : "",
                    class= size === "standart" ? "main-btn--standart" : "",
                    class= ripple ? "main-btn--ripple" : "main-btn--whitehover")= name
